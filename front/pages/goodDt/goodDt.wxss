/* pages/goodDt/goodDt.wxss */
@import "../../common.wxss";

.selectCol {
  line-height: 80rpx;
  height: 80rpx;
}

scroll-view view {
  display: inline-block;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.section {
  justify-content: space-around;
  flex-grow: 1;
}

.goodPrice {
  flex-grow: 1;
  color: red;
  padding-right: 30rpx;
  text-align: right;
}

.goodLike {
  width: 200rpx;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
}

.goodLikeImg {
  width: 40rpx;
  height: 40rpx;
  line-height: 30rpx;
  position: relative;
  top: 50%;
  margin-top: -20rpx;
}

.goodCount {
  margin-left: 20rpx;
}

/* -----------------------------------------   car and buy ---------------------------------------*/

.carAndBuy {
  position: fixed;
  bottom: 0;
  justify-content: space-between;
}

.car {
  width: 40%;
}

.car button {
  color: green;
  border-radius: 0
}

.buy {
  width: 60%;
}

.buy button {
  color: green;
  border-radius: 0
}



/*----------------------------------------- .standard -------------------------------*/
.standard{
  height: 100vh;
  width: 100%;
  background-color: #ccc;
  z-index: 2;
  top: 0;
  opacity: .5
}
.stands{
  background-color:#fff;
  position: fixed;
  bottom: 0;
  z-index: 4;
  opacity: 1;
  width: 100%;
  height: 400rpx;
  padding-top: 20rpx;
}
.stand{
  padding-left: 20rpx;
}
.standDt{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}