/* pages/order/order.wxss */
@import "../../common.wxss";

.goodsImg {
  width: 150rpx;
  height: 200rpx;
  margin-right: 20rpx;
}

.goodsDetail {
  flex-grow: 1;
}

.goods {
  margin-top: 20rpx;
  padding-left: 20rpx;
  height: 250rpx;
}

.goodNum {
  flex-grow: 1;
  text-align: right;
  padding-right: 30rpx;
}

.goDt {
  height: 200rpx;
}

.goDtI {
  width: 50rpx;
  height: 50rpx;
  top: 50%;
  margin-top: -25rpx;
  right: 20rpx;
}

/*----------------------------------------- 底部区域 ----------------------------*/
.bottomArea{
  position: fixed;
  bottom: 0px;
  background-color: #ddd;
  width: 100%;
  height: 150rpx;
}

.goodCount {
  justify-content: space-around;
  padding-top: 20rpx;
}

.carAndBuy {
  position: fixed;
  bottom: 0;
  justify-content: space-between;
}

.car {
  width: 40%;
}

.car button {
  color: green;
  border-radius: 0
}

.buy {
  width: 60%;
}

.buy button {
  color: green;
  border-radius: 0
}