/**index.wxss**/
@import "../../common.wxss";

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;

}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.top-title {
  margin-top: 10rpx;
}

.input {
  line-height: 70rpx;
  height: 70rpx;
  border-radius: 4px;
}

.input-outer {
  width: 90%;
  left: 5%;
  top: 10rpx;
  opacity: 0.6;
  z-index: 2;
  background: #fff;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 4px;
}

.col-img {
  width: 70rpx;
  height: 70rpx;
  margin: 0 auto;
}

.col {
  flex-grow: 1;
}

.goodsDetail {
  flex-grow: 1;
}

.goods {
  display: flex;
  width: 100%;
  margin-top: 20rpx;
  height: 250rpx;
  flex-wrap:wrap
}
.goodItem{
  width: 42%;
  position: relative;
  margin-left: 3%;
  margin-right: 3%;
  
  margin-bottom: 40rpx  
}

/* ---------------------------------------熱銷榜 -----------------------------*/

.hot {
  padding-left: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 20rpx;
}

.hotTop {
}

.hotMore {
  flex-grow: 1;
  text-align: right;
  margin-right: 20rpx;
}

.hotArrow {
  width: 36rpx;
  height: 36rpx;
  padding-right: 40rpx;
}

.hotImg {
  width: 80rpx;
  height: 80rpx;
}

.block {
  display: block;
}

.line2 {
  margin-top: 20rpx;
  height: 10rpx;
  margin-bottom: 20rpx;
}

/* ----------------------------橫向滾動的關鍵 */

.section {
  justify-content: space-around;
  flex-grow: 1;
}

scroll-view view {
  display: inline-block;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.hotImg {
  /* 文字换行的关键 */
  display: block;
  width: 160rpx;
  height: 160rpx;
}

.selectCol {
  width: 90rpx;
  text-align: center;
  margin-left: 0;
  margin-right: 0;
}
